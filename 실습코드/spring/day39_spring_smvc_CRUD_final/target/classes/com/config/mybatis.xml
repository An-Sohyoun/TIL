<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org/DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="com.vo.User" alias="user"/>
	    <typeAlias type="com.vo.Product" alias="product"/>
	    <!-- alias는 간단하게 부르기 위한 별명 -->
	</typeAliases>
	<!-- Java의 어떤 class를 mybatis에서 사용하겠다고 alias를 정해줌 -->
	
	<mappers>
		<mapper resource="com/config/usermapper.xml"/>
		<mapper resource="com/config/productmapper.xml"/>
	</mappers>
</configuration>






